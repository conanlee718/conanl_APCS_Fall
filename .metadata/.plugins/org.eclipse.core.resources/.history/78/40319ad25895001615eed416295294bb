public class HourglassCode {
	public static void main(String[] args) {
		printBase(); //Print the firstline
		topHalf(); //Print the top half
		System.out.println("     ||     ");
		bottomHalf();
	}

	public static void topHalf(){
		int colonDecrease=0;
		for (int i=1; i <=4; i++){//print each line
			//print spaces
			for (int j=1; j<=i; j++){
				System.out.print(" ");
			}
			System.out.print("\\");
			for (int j=4; j>colonDecrease; j--){
				System.out.print("::");
			}
			System.out.println("/");
			colonDecrease++;
		}
	}
	public static void printBase(){
		System.out.print("|");
		for (int i = 1; i<=10;i++){
			System.out.print("\"");
		}
		System.out.println("|");
	}
	
	public static void bottomHalf(){
		int colonIncrease=4;
		for(int i=4;i>=1;i--){
			//print spaces
			for(int j=4;j>0;j++){
				System.out.print(" ");
			}
			System.out.print("/");
			for(int k=1;k>=colonIncrease;k--){
				System.out.print("::");
			}
			System.out.println("\\");
			colonIncrease--;
		}
	}
}
